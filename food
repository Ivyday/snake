#include<iostream>
using namespace std;
class Map{
    private:
    class snake{
        public:
        int x;
        int y;
    };
    class Food{
    private:
    bool eat_Food = false;
    short food_x,food_y;
    Snake snake;
    public:
    Food();
    Food(int x,int y)
    void mapfood();
    bool locationFood();
    bool snakeEatFood();
    void print();
};

void Map::mapFood(){
Rand_Food();
while (1)
 {
 food_x = rand() % (width - 4) + 2;
 food_y = rand() % (height - 2) + 1; 
 if (wrong_Location() && food_x % 2 == 0)
 break;
 }
}
short (food_x,food_y);
bool locationFood(){
    for (auto i : snake) 
 {
 if (food_x == i.position_x && food_y == i.position_y) 
 return 0;
 }
 return 1;
 }
void snakeEatFood(){
    if (food_x == snake[0].position_x && food_y == snake[0].position_y);
    eat_Food = true;
}
